@article{choffinExtendingAdaptiveSpacing2021,
  title = {Extending {{Adaptive Spacing Heuristics}} to {{Multi}}-{{Skill Items}}},
  author = {Choffin, Beno{\^i}t and Popineau, Fabrice and Bourda, Yolaine},
  year = {2021},
